# Environment variables for Flipit Asteroids (no secrets)
# Copy to `.env` and adjust as needed.
# Local port policy:
# - Frontend (Vite): http://localhost:4000
# - Backend (future/local): http://localhost:4001

# General
GAME_MODE=development

# Frontend runtime config (Vite exposes only variables prefixed with VITE_)
VITE_ENV=local
# If you add a local backend, prefer http://localhost:4001
VITE_API_BASE_URL=http://localhost:4001
VITE_DEFAULT_BG_BRIGHTNESS=0.4
VITE_DEFAULT_BG_OPACITY=0.25
VITE_DEFAULT_BG_CONTRAST=1.0
VITE_ENABLE_WARP_TRAILS=true
VITE_DEFAULT_MUSIC_VOLUME=0.6
VITE_DEFAULT_SFX_VOLUME=0.8

# Optional integrations (placeholders)
VITE_ANALYTICS_KEY=your_analytics_key_here
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_NETLIFY_SITE_ID=your_site_id_here

# Example placeholders to match the prompt (not used unless wired up)
API_KEY=your_api_key_here
DB_URL=your_database_url_here